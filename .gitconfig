[user]
	name = Alexander Makeev
	email = ssh11ssh@gmail.com
	signingkey = E57397A9DFA06509

[includeIf "gitdir: ~/MTS/"]
    path = ~/MTS/.gitconfig

[core]
	longpaths = true
	quotepath = false
	excludesfile = /Users/admakeye/.gitignore_global
	attributesFile = /Users/admakeye/.gitattributes

[pull]
	rebase = true

[push]
	autoSetupRemote = true

[rebase]
	autoSquash = true

[fetch]
	prune = true

[alias]
	hist = log --graph --pretty=my

[pretty]
	my = format:%C(yellow)%h%  %C(cyan)%ad%Creset | %s %C(bold magenta)%d %C(dim green)[%an]

[log]
	date = format-local:%F %R

[format]
	pretty = medium

[rerere]
	enabled = true

[commit]
	gpgsign = true

[gpg]
	program = gpg

[grep]
	extendedRegexp = true
	patternType = extended
[credential]
	helper = cache --timeout=600

[difftool]
    prompt = true

[diff]
    tool = nvimdiff

[difftool "nvimdiff"]
    cmd = nvim -d $LOCAL $REMOTE

[difftool "vscode"]
	cmd = code --diff --wait $LOCAL $REMOTE

[merge]
    tool = nvim

[mergetool "vscode"]
    cmd = code --wait $MERGED

[mergetool "nvim"]
    cmd = cmd = nvim -d $LOCAL $REMOTE $MERGED

[diff "javascript"]
	xfuncname = "([a-zA-Z_$][a-zA-Z0-9_$]*(\\.[a-zA-Z0-9_$]+)*[ \t]*=[ \t]*function([ \t][a-zA-Z_$][a-zA-Z0-9_$]*)?[^\\{]*)\n([a-zA-Z_$][a-zA-Z0-9_$]*[ \t]*:[ \t]*function([ \t][a-zA-Z_$][a-zA-Z0-9_$]*)?[^\\{]*)\n[^a-zA-Z0-9_\\$](function([ \t][a-zA-Z_$][a-zA-Z0-9_$]*)?[^\\{]*)"
	wordRegex = "[a-zA-Z_][a-zA-Z0-9_]*|[-+0-9.e]+[fFlL]?|0[xX]?[0-9a-fA-F]+[lL]?|[-+*/<>%&^|=!]=|--|\\+\\+|<<=?|>>=?|&&|\\|\\||::|->"

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[pager]
	; diff = delta
	; log = delta
	; reflog = delta
	; show = delta

[interactive]
	; diffFilter = delta --color-only

[delta]
	features = line-numbers decorations
	whitespace-error-style = 22 reverse
	; light = "if [ $(dark-mode status) = 'on' ]; then true; else false; fi"
	light = true
	plus-style = "green ul normal"
	minus-style = "red strike normal"
	; syntax-theme = Monokai Extended

[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
